<Window x:Class="SailboatUI_Grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SailboatUI_Grid"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="600" 
        SizeToContent="Width" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/> <!--Border left-->
            <ColumnDefinition Width="100"/> <!--For Labels-->
            <ColumnDefinition Width="100"/> <!--For input fields-->
            <ColumnDefinition Width="auto"/> <!--Button will span over this-->
            <ColumnDefinition Width="*"/> <!--For image-->
            <ColumnDefinition Width="20"/> <!--Border right-->
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/> <!--Border Top-->
            <RowDefinition Height="30"/> <!--Length-->
            <RowDefinition Height="30"/> <!--Name-->
            <RowDefinition Height="40"/> <!--Button-->
            <RowDefinition Height="30"/> <!--Hull speed-->
            <RowDefinition Height="*"/> <!--Image-->
            <RowDefinition Height="20"/> <!--Border bottom-->
        </Grid.RowDefinitions>
        
        <!--Lenght Label-->
        <Label Grid.Row="1" 
               Grid.Column="1" 
               Margin="3" 
               Content="_Length: "/>
        
        <!--Lenght input-->
        <TextBox Grid.Column="2"
                 Grid.Row="1"
                 Name="tbxLength"
                 Margin="5"
                 MinWidth="50"
                 TextChanged="tbxLength_TextChanged"/>
        
        <!--Feet unit-->
        <Label Grid.Column="3"
               Grid.Row="1"
               Margin="3" 
               Content="feet"/>
        
        <!--Name Label-->
        <Label Grid.Column="1"
               Grid.Row="2"
               Margin="3" 
               Content="_Name: "/>
                
        <!--Name input-->
        <TextBox Grid.Column="2"
                 Grid.ColumnSpan="2"
                 Grid.Row="2"
                 Name="tbxName"
                 Margin="5"
                 TextChanged="tbxName_TextChanged" />
        
        <!--Button-->
        <Button Grid.Column="1"
                Grid.ColumnSpan="3"
                Grid.Row="3"
                Name="btnCalculateHullSpeed"
                Content="Calculate Hull Speed"
                FontWeight="Bold"
                Margin='5'
                Padding="5"
                Click="btnCalculateHullSpeed_Click"  
                IsDefault="True" />
        
        <!--Hull speed TextBlock-->     
        <TextBlock Grid.Column="1"
                   Grid.Row="4"
                   Margin="3" >Hull speed:</TextBlock>
        
        <!--Hull speed calculation result-->
        <TextBlock Grid.Column="2" 
                   Grid.Row="4"
                   Margin="3" 
                   Name="tbxHullSpeed" />
        
        <!--Speed unit TextBlock-->
        <TextBlock Grid.Column="3"
                   Grid.Row="4"
                   Margin="3" 
                   Text="knots"/>


        <Image Source="sailbotImage.jpg" 
               Margin="10" 
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Grid.Column="4"
               Grid.RowSpan="5"
               Grid.Row="1"/>


    </Grid>
</Window>
