<Window x:Class="DebtCollector.Views.LogTransactionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtCollector.Views"
        mc:Ignorable="d"
        Title="{Binding Path=Title}" Height="200" Width="auto"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=TbxValue}"
        ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel   
            Grid.Column="1"
            Grid.Row="1"
        >
            <DataGrid      
                ItemsSource="{Binding Path=CurrentDebtor.Transactions}"
                SelectedItem="{Binding Path=CurrentTransaction}"
                Name="DataTrans"
                Grid.Column="1"
                Grid.Row="1"
                CanUserAddRows="False" 
                CanUserDeleteRows="False" 
                IsReadOnly="True"
                MinHeight="50"
                Margin="5"
            />
            <Button   
                IsCancel="True" 
                TabIndex="6"
                MinHeight="25" 
                MinWidth="75"  
                Name="btnCancel" 
                Content="Close"
                Margin="5" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
             />
        </StackPanel>
        
        <WrapPanel 
            Grid.Row="1"
            Grid.Column="2"
        >
            <TextBox 
                x:Name="TbxValue"
                Text="{Binding Path=CurrentTransaction.Amount}"
                HorizontalAlignment="Center"  
                Grid.Row="1"
                Grid.Column="2"              
                Margin="5" 
                Width="75"
                Height="20"
            />
            <Button 
                x:Name="button_add_value" 
                Content="Add Value" 
                HorizontalAlignment="Center" 
                Margin="5" 
                VerticalAlignment="Top" 
                MinHeight="25" 
                MinWidth="75"   
                Command="{Binding Path=AddValuebtnCommand}"
                Click="button_add_value_Click" IsDefault="True"
             />
        </WrapPanel>
   

       

       

        
    </Grid>
</Window>

