<Window x:Class="DebtCollector.Views.LogTransactionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtCollector.Views"
        mc:Ignorable="d"
        Height="150" Width="250"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=tbxId}"
        ShowInTaskbar="False"
        Title="{Binding Path=Title}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Label 
            Content="Amount"
            Grid.Row="1"
            Grid.Column="2"
        />

        <TextBox 
            Name="txt_Amount"
            Grid.Row="2"
            Grid.Column="2"
            Width="100"
            Margin="5"
            Text="{Binding Path=Saldo}"
            Style="{StaticResource TextBoxStyle}"
        />

        <Button 
            Grid.Row="3" 
            Grid.Column="2"
            Margin="5"
            Click="btn_save_Click"
            Name="btn_save"
            Content="Add"
        />
        
        <DataGrid 
            ItemsSource="{Binding Path=Transactions}" 
            SelectedItem="{Binding Path=CurrentDebtor}"
            IsSynchronizedWithCurrentItem="True"
            Grid.Column="1" 
            Grid.Row="1"
            Margin="9,9,9,9"  
            CanUserAddRows="False" 
            CanUserDeleteRows="False" 
            IsReadOnly="True"
            MinRowHeight="12">
        </DataGrid>
    </Grid>
</Window>

